// Prisma Schema for NestJS Backend
// PostgreSQL Database with User <-> Post relationship

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  avatar    String?
  bio       String?  // Personal signature / bio
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  posts     Post[]
  comments  Comment[]
  likes     Like[]
  favorites Favorite[]

  // Follow relations
  followers Follow[] @relation("following") // Users who follow this user
  following Follow[] @relation("follower")  // Users this user follows

  // Chat relations
  conversationMembers ConversationMember[]
  sentMessages        Message[]
  ownedConversations  Conversation[] @relation("ConversationOwner")

  @@map("users")
}

// Follow Model (User follows User)
model Follow {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // The user who is following
  follower   User   @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  followerId String

  // The user being followed
  following   User   @relation("following", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String

  // Unique constraint: one user can only follow another user once
  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}

// Post Model
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  coverUrls String[] @default([])
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  author    User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  comments  Comment[]
  likes     Like[]
  favorites Favorite[]

  @@index([authorId])
  @@map("posts")
}

// Comment Model
model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String
  post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId   String

  @@index([authorId])
  @@index([postId])
  @@map("comments")
}

// Like Model (User likes Post)
model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String

  // Unique constraint: one user can only like a post once
  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@map("likes")
}

// Favorite Model (User favorites Post)
model Favorite {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String

  // Unique constraint: one user can only favorite a post once
  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@map("favorites")
}

// Role Enum
enum Role {
  USER
  ADMIN
}

// ==================== Chat Models ====================

// Conversation Model - supports both private and group chats
model Conversation {
  id        String           @id @default(cuid())
  name      String?          // Group name (null for private chats)
  avatar    String?          // Group avatar
  type      ConversationType @default(PRIVATE)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  // Owner (for group chats)
  owner   User?   @relation("ConversationOwner", fields: [ownerId], references: [id])
  ownerId String?

  // Relations
  members  ConversationMember[]
  messages Message[]

  @@map("conversations")
}

// Conversation Type Enum
enum ConversationType {
  PRIVATE // 1-on-1 chat
  GROUP   // Group chat
}

// Conversation Member - many-to-many relationship
model ConversationMember {
  id       String     @id @default(cuid())
  joinedAt DateTime   @default(now())
  role     MemberRole @default(MEMBER)
  nickname String?    // Nickname in this conversation
  muted    Boolean    @default(false) // Mute notifications

  // User relation
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  // Conversation relation
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String

  // Last read message (for unread count calculation)
  lastReadAt DateTime?

  @@unique([userId, conversationId])
  @@index([userId])
  @@index([conversationId])
  @@map("conversation_members")
}

// Member Role Enum
enum MemberRole {
  OWNER  // Group owner
  ADMIN  // Administrator
  MEMBER // Regular member
}

// Message Model
model Message {
  id        String      @id @default(cuid())
  content   String
  type      MessageType @default(TEXT)
  createdAt DateTime    @default(now())

  // Sender
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)
  senderId String

  // Conversation
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String

  @@index([conversationId, createdAt])
  @@index([senderId])
  @@map("messages")
}

// Message Type Enum
enum MessageType {
  TEXT   // Text message
  IMAGE  // Image message
  SYSTEM // System message (user joined, left, etc.)
}
